{
  "name": "Stencil",
  "version": "1.0",
  "css_compiler": "scss",
  "autoprefixer_cascade": true,
  "autoprefixer_browsers": ["last 3 versions"],
  "jspm": {
    "dev": {
      "dep_location": "assets/js/dependency-bundle.js",
      "bootstrap": "js/**/* - [js/**/*]"
    },
    "bootstrap": "js/app",
    "bundle_location": "assets/js/bundle.js",
    "jspm_packages_path": "assets/jspm_packages"
  },
  "settings": {
    "homepage_num_of_new_products": 8,
    "homepage_num_of_featured_products": 8,
    "homepage_num_of_top_products": 8,
    "homepage_show_carousel": true,
    "color_primary": "#4f4f4f",
    "color_primaryDark": "#454545",
    "color_primaryLight": "#a5a5a5",
    "product_list_display_mode": "grid"
  },
  "resources": {
    "cart": true,
    "shop_by_brand": true
  },
  "images": {
    "logo": {
      "width": 250,
      "height": 100
    },
    "thumb": {
      "width": 100,
      "height": 100
    },
    "product": {
      "width": 500,
      "height": 659
    },
    "gallery": {
      "width": 190,
      "height": 250
    },
    "zoom": {
      "width": 1280,
      "height": 1280
    }
  },
  "variations": [
    {
      "name": "Bold"
    },
    {
      "name": "Light",
      "settings": {
        "homepage_num_of_new_products": 4,
        "homepage_num_of_featured_products": 4,
        "homepage_num_of_top_products": 4,
        "homepage_show_carousel": false
      }
    }
  ]
}
